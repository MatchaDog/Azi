{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "useNx": true,
    "useWorkspaces": true,
    "npmClient": "yarn",
    "version": "0.0.0",
    "packages": ["packages/*"],
    "command": {
        "bootstrap": {
            "npmClientArgs": ["--no-package-lock"]
        },
        "version": {},
        "publish": {
            "npmClient": "yarn",
            "ignoreChanges": ["**/*.md", "**/test/**"],
            "message": "chore(release): publish",
            "registry": "https://registry.npmjs.org",
            "conventionalCommits": true
        }
    }
}
